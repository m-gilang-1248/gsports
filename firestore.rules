rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to venues and bookings for availability checks
    match /venues/{venueId} {
      allow read: if true;
      allow write: if request.auth != null; // Ideally check if owner
      
      match /courts/{courtId} {
        allow read: if true;
        allow write: if request.auth != null;
      }
    }
    
    match /bookings/{bookingId} {
      allow read: if true; // Public read for availability
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null; // Ideally check if participant or host
    }

    // Default rule for other collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}