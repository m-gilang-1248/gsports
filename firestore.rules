rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to venues
    match /venues/{venueId} {
      allow read: if true;
      allow write: if request.auth != null;
      
      match /courts/{courtId} {
        allow read: if true;
        allow write: if request.auth != null;
      }
    }
    
    // Allow public read access to bookings for availability checks
    // This allows collection queries (list) and individual document gets
    match /bookings/{bookingId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }

    // Default rule for other collections (users, transactions, etc)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}